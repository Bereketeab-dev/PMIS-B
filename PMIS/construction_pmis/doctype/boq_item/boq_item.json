{
    "name": "BOQ Item",
    "engine": "InnoDB",
    "is_submittable": 0,
    "ischild": 1,
    "issingle": 0,
    "istable": 1,
    "module": "Construction PMIS",
    "creation": "YYYY-MM-DD HH:MM:SS.NNNNNN",
    "modified": "YYYY-MM-DD HH:MM:SS.NNNNNN",
    "modified_by": "Administrator",
    "owner": "Administrator",
    "permissions": [], # Permissions are typically handled by the parent DocType for child tables
    "sort_field": "idx", # Sort by index in the table
    "sort_order": "ASC",
    "track_changes": 1,
    "fields": [
        {
            "fieldname": "item_code",
            "label": "Item Code / WBS",
            "fieldtype": "Data",
            "in_list_view": 1,
            "width": 120
        },
        {
            "fieldname": "description",
            "label": "Description",
            "fieldtype": "TextEditor", # Using TextEditor for potentially longer descriptions
            "reqd": 1,
            "in_list_view": 1,
            "width": 300
        },
        {
            "fieldname": "quantity",
            "label": "Quantity",
            "fieldtype": "Float",
            "reqd": 1,
            "in_list_view": 1,
            "width": 100
        },
        {
            "fieldname": "unit",
            "label": "Unit",
            "fieldtype": "Link",
            "options": "UOM", # Standard UOM DocType in ERPNext/Frappe
            "reqd": 1,
            "in_list_view": 1,
            "width": 100
        },
        {
            "fieldname": "rate",
            "label": "Rate",
            "fieldtype": "Currency",
            "reqd": 1,
            "in_list_view": 1,
            "width": 120
            # precision: "2" # Or company currency precision
        },
        {
            "fieldname": "amount",
            "label": "Amount",
            "fieldtype": "Currency",
            "read_only": 1,
            "in_list_view": 1,
            "bold": 1,
            "width": 150
            # precision: "2" # Or company currency precision
        },
        {
            "fieldname": "notes",
            "label": "Notes",
            "fieldtype": "Small Text",
            "width": 200
        }
    ]
}
